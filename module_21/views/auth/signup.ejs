<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/forms.css" />
<link rel="stylesheet" href="/css/product.css" />
<link rel="stylesheet" href="/css/auth.css" />
</head>

<body>
<%- include('../includes/navigation.ejs') %>

<main>
    <% if (errorMessage) {%>
        <div class="user-message user-message--error"><%= errorMessage %></div>
    <%}%>
    <div class="login-form">
        <form action="/signup" method="POST" novalidate>
            <div class="form-control">
                <label for="email">E-mail</label>
                <input
                        class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : ''%>"
                        type="email"
                        name="email"
                        id="email" value="<%=prevInput.email%>"/>
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input
                        class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : ''%>"
                        type="password" name="password" id="password" value="<%=prevInput.password%>"/>
            </div>
            <div class="form-control">
                <label for="password-confirm">Confirm password</label>
                <input
                        class="<%= validationErrors.find(e => e.param === 'passwordConfirm') ? 'invalid' : ''%>"

                        type="password" name="passwordConfirm" id="password-confirm" value="<%=prevInput.passwordConfirm%>"/>
            </div>
            <button class="btn" type="submit">Signup</button>
            <input type="hidden" value="<%= csrfToken %>" name="_csrf">
        </form>
    </div>
</main>
<%- include('../includes/end.ejs') %>